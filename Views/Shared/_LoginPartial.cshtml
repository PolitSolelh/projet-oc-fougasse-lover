@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="col d-flex justify-content-end">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="nav-item me-2">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bonjour @User.Identity?.Name!</a>
        </div>
        <div class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link">Déconnexion</button>
            </form>
        </div>
    }
    else
    {
        <div class="nav-item me-2">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">S'enregistrer</a>
        </div>
        <div class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
        </div>


    }
</div>
